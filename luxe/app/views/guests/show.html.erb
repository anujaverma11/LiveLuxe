        date-format="dd-MMM-yyyy" date-options="dateOptions"
        date-disabled="disabled(date, mode)" 
        readonly-date="false"
        readonly-time="false"></datetimepicker>

        <button class="btn btn-success btn-sm" ng-click="dateTimeNow()" tooltip="Set date and time to now">Now</button>

