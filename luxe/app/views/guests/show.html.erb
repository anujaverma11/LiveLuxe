    </accordion-group>

    <accordion-group heading="Feed me" template-url="group-template.html" >
      <div ng-controller="FeedMeController">
        
        <div ng-controller="DateTimePickerDemoCtrl" class="container">

          <h4>Sceduling room service for: <em>{{date | date:'shortTime' }}, {{date | date:'fullDate' }}</em></h4>

          <datetimepicker min-date="minDate" hour-step="hourStep" 
          minute-step="minuteStep" ng-model="date" show-meridian="showMeridian" 
          date-format="dd-MMM-yyyy" date-options="dateOptions"
          date-disabled="disabled(date, mode)" 
          readonly-date="false"
          readonly-time="false"></datetimepicker>

          <button class="btn btn-success btn-sm" ng-click="dateTimeNow()" tooltip="Set date and time to now">Now</button>

        </div>
  <!-- adding -->
        <div ng-controller="ThumbnailSelectorController" class="container">


          <a href="#" ng-repeat="food in foods" class="magic-thumbnail" ng-click="selectOption(food)" ng-selected="food.selected"> 
            <img src={{food.src}} />
