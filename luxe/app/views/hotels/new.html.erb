<h1>Sign Up</h1>

<%= form_for @hotel do |f| %>
  <% if @hotel.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @hotel.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :amenities %><br />
    <%= f.text_field :amenities %>
  </p>
    <p>
      <%= f.label :location %><br />
      <%= f.text_field :location %>
    </p>
  <p class="button"><%= f.submit %></p>
<% end %>

