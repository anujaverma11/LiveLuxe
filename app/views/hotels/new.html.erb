<div class="hotel-back">
  <div class="hotelsignup">
    <h1>Ready to start living LUXE?</h1>
    <h1>Hotel Sign Up</h1>

<%= form_for :hotel, url: '/hotels' do |f| %>
  <% if @hotel.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @hotel.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  <p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :amenities %>
  </p>

  <%= f.submit 'Sign Up', :class => 'btn btn-default' %>
  <br>
  <br>
  <p><button class="loginButton2 btn btn-default" type="button">Login</button></p>
  <% end %>
</div>

<div class="hotelslogin" >
<h1>Hotel log in</h1>

<%= form_tag '/login' do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Submit", :class => "btn btn-default" %></p>
  <p class="SignupButton"><button class="btn btn-default" type="button">Signup</button></p>

<% end %>
</div>
</div>
