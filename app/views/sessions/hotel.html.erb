<h1>Hotel log in</h1>

</br>

<div>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %>
</div>

<%= form_tag '/login' do %>

  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Submit" %></p>
<% end %>


<%= button_to "Register", signup_path, method: "get" %>
