<h1>Hotel log in</h1>

<%= form_tag '/login' do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Submit" %></p>
<% end %>

<%= button_to "Register", signup_path, method: "get" %>
